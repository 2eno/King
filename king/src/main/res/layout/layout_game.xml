<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.zipf.zeno.kingo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom">

        <ToggleButton
            android:id="@+id/dice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />

        <ToggleButton
            android:id="@+id/dice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />

        <ToggleButton
            android:id="@+id/dice_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />

        <ToggleButton
            android:id="@+id/dice_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />

        <ToggleButton
            android:id="@+id/dice_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />

        <ToggleButton
            android:id="@+id/dice_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="1dp"
            android:background="@drawable/one" />
    </LinearLayout>

    <Button
        android:id="@+id/button_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="roll" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Next Player!"
        android:visibility="gone" />
</LinearLayout>
